<div class="divStyle">
    <h1 class="text-center pt-2 pb-1">Ultimate Veggie Burger</h1>
    <h2 class="text-center pb-1">Add your choice of toppings to create the ultimate veggie burger</h2>
</div>

<div class="float-left mt-3 p-2 divStyle">
    <h2 class="p-1">Add These Toppings:</h2>
    <ul class="mt-2">
        {{#each burgers}}
        {{#unless devoured}}
        <li class="mt-2">
            {{this.burgerName}}
            <button data-burgerid="{{this.id}}" class="devour btn btn-sm btnStyle">Add me!</button>
        </li>
        {{/unless}}
        {{/each}}
    </ul>
</div>

<div class="float-left mt-3 ml-3 p-2 divStyle">
    <h2 class="p-1">Current Toppings:</h2>
    <ul class="mt-2">
        <li>
            <p>
                Top Bun
            </p>
        </li>
        {{#each burgers}}
        {{#if devoured}}
        <li>
            <p>
                {{this.burgerName}}
                <button data-burgerid="{{this.id}}" class="remove btn btn-sm  btnStyle">Remove me!</button>
            </p>
        </li>
        {{/if}}
        {{/each}}
        <li>
            <p>
                Bottom Bun
            </p>
        </li>
    </ul>
</div>

<div class="float-left divStyle mt-3 ml-3 p-2 pb-3">
    <h2 class="p-1 ml-3">Add a Topping:</h2>
    <form class="create-form">
        <div class="form-group mt-3 ml-3">
            <label for="burger" class="float-left">Topping:</label>
            <input type="text" id="burger" name="name" class="float-left ml-2">
            <button type="submit" id="submit" class="float-right ml-2 mr-2 btn btn-sm btnStyle">Add Topping</button>
        </div>
    </form>
</div>
<div id="about" class="divStyle mt-3 p-2 ml-4 float-left">
    <h2 class="titleFont text-center mt-2">Made by Adam Cromer</h5>
    <a href="https://adamcromer.github.io/Portfolio/index.html">
        <button type="button" class="btn btn-lg btnStyle p-1" id="navLeft">
            About
        </button>
    </a>
    <a href="https://adamcromer.github.io/Portfolio/portfolio.html">
        <button type="button" class="btn btn-lg btnStyle p-1 ml-3">
            Portfolio
        </button>
    </a>
</div>

