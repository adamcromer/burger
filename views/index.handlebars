<h1>Eat that veggie burger!</h1>

<h2>These burgers are awaiting to be eaten!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        {{this.id}}. {{this.burger_name}}

        <button data-burgerid="{{this.id}}" class="devourBurger">Eat me!</button>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>These burgers have already been eaten.</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
        <p>
            {{this.id}}. {{this.burger_name}}
        </p>
    </li>
    {{/if}}
    {{/each}}
</ul>

<h2>Add your own veggie burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="bg">Burger Name:</label>
        <input type="text" id="bg" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>