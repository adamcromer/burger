<div class="divStyle">
    <h1 class="text-center">Ultimate Veggie Burger</h1>
    <h2 class="text-center">Add your choice of toppings to create the ultimate veggie burger</h2>
</div>

<div class="float-left w-50 mt-3 divStyle">
    <h2>Add These Toppings:</h2>
    <ul class="mt-2">
        {{#each burgers}}
        {{#unless devoured}}
        <li class="mt-2">
            {{this.burgerName}}
            <button data-burgerid="{{this.id}}" class="devour">Add me!</button>
        </li>
        {{/unless}}
        {{/each}}
    </ul>
</div>

<div class="float-right w-50 mt-3 divStyle">
    <h2>Current Toppings:</h2>
    <ul class="mt-2">
        <li>
            <p>
                Top Bun
            </p>
        </li>
        {{#each burgers}}
        {{#if devoured}}
        <li>
            <p>
                {{this.burgerName}}
            </p>
        </li>
        {{/if}}
        {{/each}}
        <li>
            <p>
                Bottom Bun
            </p>
        </li>
    </ul>
</div>

<div id="newBurger" class="divStyle">
    <h2 class="mt-2">Add your own favorite topping:</h2>
    <form class="create-form">
        <div class="form-group mt-3 ml-3">
            <label for="burger">Topping:</label>
            <input type="text" id="burger" name="name">
        </div>
        <button type="submit" id="submit">Add Topping</button>
    </form>
</div>

<link rel="stylesheet" type="text/css" href="\burger\views\layouts\style.css">